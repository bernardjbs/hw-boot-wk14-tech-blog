<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='/css/index.css' />
    <title>Tech Blog - Your favorite tech topics</title>
  </head>

  <body>
    <section class='container main-container'>
      <section class='main-top'>
        <section class='nav-bar'>
          <div>
            <img
              class='logo-image' src='/img/tech_blog_logo.png' alt='tech blog logo' />
          </div>
          <nav>
            <ul>
              <li>
                <a class='nav-text' href='/' tabindex='2'>Homepage</a>
              </li>
              <li>
                <a class='nav-text' href='/dashboard' tabindex='3'>Dashboard</a>
              </li>
              <li>
                <!-- Conditionally render login or logout links -->
                {{#if logged_in}}
                  <button class='no-button' id='logout'>Logout</button>
                {{else}}
                  <a href='/login'>Login</a>
                {{/if}}
              </li>
            </ul>
          </nav>
        </section>
        {{#if logged_in}}
          <section class='info logged-as'>
            <span>Logged in as {{username}}</span>
          </section>
        {{/if}}
      </section>

      <section class='hero'>
        <img src='/img/tech_hero_01.jpg' alt='hero image' />
      </section>

    </section>

    <section class='nav-info'>
      {{#if_equals page 'dashboard'}}
        <h1>My Dashboard</h1>
      {{else}}
        <h1>Tech Blog</h1>
      {{/if_equals}}
    </section>

  </body>
  {{{body}}}
  <!-- Render script for logged in users only -->
  {{#if logged_in}}
    <script src='/js/logout.js'></script>
  {{/if}}
</html>